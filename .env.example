# GigaChat Configuration
GIGACHAT_BASE=https://api.gigachat.sber.ru
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_AUTH_KEY=your_gigachat_auth_key_here
GIGACHAT_MODEL=GigaChat
GIGACHAT_ACCESS_TOKEN=your_access_token_here

# Qdrant Configuration
QDRANT_URL=https://your-qdrant-instance.com:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=bowling_knowledge

# Application Settings
TOP_K=5
MAX_QUERY_LEN=512
MAX_CONTEXT_LEN=2000
EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# Sber Graph Integration
GRAPH_SECRET=your_graph_secret_here

# Google Sheets (для загрузки данных)
SERVICE_ACCOUNT_FILE=app/service_account.json
SPREADSHEET_ID=your_google_sheets_id_here

# Telegram bot
TELEGRAM_TOKEN=your_telegram_token_here
SEARCH_API_URL=http://localhost:8000/search

# Production Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
WORKERS=4
